<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAED"
    android:padding="16dp"
    tools:context=".RegisterActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/logo_register" />

    <!-- Nama Lengkap -->
    <EditText
        android:id="@+id/et_name_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border_orange"
        android:paddingVertical="8dp"
        android:paddingHorizontal="4dp"
        android:hint="Nama Lengkap"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"/>

    <!-- Nomor HP -->
    <EditText
        android:id="@+id/et_phone_register"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border_orange"
        android:paddingVertical="8dp"
        android:paddingHorizontal="4dp"
        android:hint="Nomor HP"
        app:layout_constraintTop_toBottomOf="@id/et_name_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Email -->
    <EditText
        android:id="@+id/et_email_register"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border_orange"
        android:paddingVertical="8dp"
        android:paddingHorizontal="4dp"
        android:hint="Email"
        app:layout_constraintTop_toBottomOf="@id/et_phone_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Password -->
    <EditText
        android:id="@+id/et_password_register"
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border_orange"
        android:paddingVertical="8dp"
        android:paddingHorizontal="4dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/et_email_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Konfirmasi Password -->
    <EditText
        android:id="@+id/et_confirm_password_register"
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border_orange"
        android:paddingVertical="8dp"
        android:paddingHorizontal="4dp"
        android:hint="Konfirmasi Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/et_password_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Tombol Daftar -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FEBF34"
        android:text="Daftar"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_password_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
